@{
  if (ViewData.TryGetValue("ParentLayout", out var parentLayout)){
    Layout = (string) parentLayout;
  }
  else {
    Layout = "/Areas/Identity/Pages/_Layout.cshtml";
  }
}


<div class="container body-container row p-0 elevation-4dp">
  <div class="col-12 header-background-color">
      <h2 class="mt-2 mb-2">Manage your account</h2>
  </div>

  <div class="col-12">
    <h4>Change your account settings</h4>
    <hr />
    <div class="row mb-4">
      <div class="col-md-3">
        <partial name="_ManageNav" />
      </div>
      <div class="col-md-9">
        @RenderBody()
      </div>
    </div>
  </div>
</div>


@section Scripts {
  @RenderSection("Scripts", required: false)
}