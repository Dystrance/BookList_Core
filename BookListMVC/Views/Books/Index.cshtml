@model BookListMVC.Areas.Identity.Data.AppUser

<div class="container body-container row p-0 elevation-4dp">
  <div class="col-6 header-background-color">
    <h2 class="mt-2 mb-2">Book List</h2>
  </div>
  <div class="col-6 header-background-color" style="width: 100%">
    <a asp-action="Upsert" asp-controller="Books" class="btn btn-info form-control elevation-2dp" style="margin-top: 10px; float:right; max-width: 175px">
      <i class="material-icons md-48">add</i>
      <span>Add New Book</span>
    </a>
  </div>

  <div class="col-12 p-0">
    <div class="tab-content col-12 p-3">
      <ul class="nav nav-tabs datatable-navbar">
        <li class="nav-item datatable-tab">
          <a class="nav-link active" data-toggle="tab" href="#AllBooks">All</a>
        </li>
        <li class="nav-item datatable-tab">
          <a class="nav-link" data-toggle="tab" href="#MyBooks">My List</a>
        </li>
      </ul>
      <div id="AllBooks" class="tab-pane active">
        <table id="DtBooks" cellpadding="0" cellspacing="0" class="table table-striped table-bordered dataTable" style="width: 100%">
          <thead>
            <tr>
              <th>Name</th>
              <th>Author</th>
              <th>ISBN</th>
              <th>Action</th>
            </tr>
          </thead>
        </table>
      </div>
      <div id="MyBooks" class="tab-pane">
        <table id="DtMyBooks" cellpadding="0" cellspacing="0" class="table table-striped table-bordered dataTable" style="width: 100%">
          <thead>
            <tr>
              <th>Name</th>
              <th>Author</th>
              <th>ISBN</th>
              <th>Action</th>
            </tr>
          </thead>
        </table>
      </div>
    </div>
  </div>
</div>

@section Scripts{
  <script src="~/js/bookList.js"></script>
  <script type="module" src="~/js/bootstrap-select.js"></script>
}